<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.machinetestandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MachineTestAndroid">
        <activity android:name=".ui.endlessrecyclerview.list.EndlessRecyclerViewListActivity"></activity>
        <activity android:name=".ui.endlessrecyclerview.details.EndlessRecyclerViewDetailsActivity" />
        <activity android:name=".ui.recyclerview.details.RecyclerViewDetailsActivity" />
        <activity android:name=".ui.recyclerview.list.RecyclerViewListActivity" />
        <activity android:name=".ui.recyclerview.details.DetailsActivity" />
        <activity android:name=".ui.recyclerview.list.ListActivity" />
        <activity android:name=".ui.basic.details.MovieDetailsActivity" />
        <activity android:name=".ui.basic.list.MovieListActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>